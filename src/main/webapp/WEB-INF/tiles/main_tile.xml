<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
        <!-- BASE DEFINITION -->
        <definition name="main_template" template="/WEB-INF/views/templates/main/main_template.jsp">
                <put-attribute name="header" value="/WEB-INF/views/layouts/main/navbar.jsp" />
                <put-attribute name="topbar" value="/WEB-INF/views/layouts/main/topbar.jsp" />
                <put-attribute name="sidebar" value="/WEB-INF/views/layouts/main/sidebar.jsp" />
                <put-attribute name="main-sidebar" value="/WEB-INF/views/layouts/main/main_sidebar.jsp" />
                <put-attribute name="footer" value="/WEB-INF/views/layouts/main/footer.jsp" />
                <put-attribute name="content" value="" />
        </definition>
        <!-- Index -->
        <definition name="main.index" extends="main_template">
                <put-attribute name="content" value="/WEB-INF/views/main/index.jsp"></put-attribute>
        </definition>
        <!-- BASE DEFINITION -->

        <!-- EMPTY DEFINITION-->
        <definition name="main_empty_template" template="/WEB-INF/views/templates/main/main_empty_template.jsp">
                <put-attribute name="header" value="/WEB-INF/views/layouts/main/navbar.jsp" />
                <put-attribute name="footer" value="/WEB-INF/views/layouts/main/footer.jsp" />
                <put-attribute name="content" value="" />
        </definition>
        <!-- Login-->
        <definition name="main.secure.login" extends="main_empty_template">
                <put-attribute name="content" value="/WEB-INF/views/main/secure/login.jsp" />
        </definition>
        <!-- Register-->
        <definition name="main.secure.register" extends="main_empty_template">
                <put-attribute name="content" value="/WEB-INF/views/main/secure/register.jsp" />
        </definition>
        <!-- EMPTY DEFINITION-->


</tiles-definitions>